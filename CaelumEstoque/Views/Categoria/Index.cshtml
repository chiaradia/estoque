
<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in ViewBag.Categorias)
        {
            <tr>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>

            </tr>
        }
    </tbody>

</table>

<ul class="nav nav-pills pull-left">
    <li>@Html.ActionLink("Cadastrar categoria", "FormCadastraCategoria", "Categoria")</li>
</ul>
